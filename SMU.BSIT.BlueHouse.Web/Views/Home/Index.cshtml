@using SMU.BSIT.BlueHouse.Web.Models.Admin.Products
@model ProductListViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <h1 class="title">Shop Now</h1>

    @if (Model.Products.Any())
    {
        <!-- Featured Items Section -->
        <h2 class="section-title">Featured Items</h2>
        <div class="featured-grid">
            @foreach (var product in Model.Products.Take(3))
            {
                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="featured-card">
                    <img src="@(string.IsNullOrEmpty(product.CoverImageUrl) ? "/images/placeholder.png" : product.CoverImageUrl)"
                         class="featured-image" alt="@product.Name">

                    <div class="featured-details">
                        <h2 class="product-name">@product.Name</h2>
                        <p class="product-price">₱@product.Price.ToString("N2")</p>

                        <div class="button-group">
                            <button class="btn add-cart"><i class="fa fa-cart-plus"></i></button>
                            <button class="btn buy-now"><i class="fa fa-shopping-bag"></i></button>
                        </div>
                    </div>
                </a>
            }
        </div>

        <!-- Regular Products Section -->
        <h2 class="section-title">All Products</h2>
        <div class="product-grid">
            @foreach (var product in Model.Products.Skip(3))
            {
                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="product-card">
                    <img src="@(string.IsNullOrEmpty(product.CoverImageUrl) ? "/images/placeholder.png" : product.CoverImageUrl)"
                         class="product-image" alt="@product.Name">

                    <div class="product-details">
                        <h2 class="product-name">@product.Name</h2>
                        <p class="product-price">₱@product.Price.ToString("N2")</p>

                        <div class="button-group">
                            <button class="btn add-cart"><i class="fa fa-cart-plus"></i></button>
                            <button class="btn buy-now"><i class="fa fa-shopping-bag"></i></button>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <p class="no-products">No products available.</p>
    }
</div>
