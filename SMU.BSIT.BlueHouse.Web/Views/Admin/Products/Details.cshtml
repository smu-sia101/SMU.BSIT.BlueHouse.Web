@model SMU.BSIT.BlueHouse.Web.Models.Admin.Products.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-circle"></i> The product details are not available.
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    }
    else
    {
        <div class="card">
            <div class="row g-0">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <div class="col-md-4">
                        <img src="@Model.CoverImageUrl" class="img-fluid rounded-start" alt="Product Image">
                    </div>
                }

                <div class="col-md-8">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Name</h4>
                        <p class="card-text"><strong>Description:</strong> @Html.Raw(Model.Description)</p>
                        <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
                        <p class="card-text"><strong>Price:</strong> ₱@Model.Price.ToString("N2")</p>
                        <p class="card-text"><strong>Category:</strong> @Model.Category</p>
                        <p class="card-text"><strong>Manufacturer:</strong> @Model.Manufacturer</p>

                        <div class="mt-3">
                            <a asp-action="Index" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
